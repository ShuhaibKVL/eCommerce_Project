<script>
  const loadPage = async (page) => {
    console.log("Page is found in EJS > ",page);
    try {
        const response = await fetch(`/admin/UserDetails?page=${page}`)
        const data = await response.json();

        // Get a reference to the container where you want to display the user data
        const usersContainer = document.getElementById('usersContainer');
        usersContainer.innerHTML = ''; // Clear existing content
        const skip = data.skip
        // Iterate over the fetched users and create HTML elements to display them
        data.users.forEach((user,index) => {
            const userElement = document.createElement('tr');
            const adjustedIndex = skip + index + 1;
            userElement.innerHTML = `
                <td>${adjustedIndex}</td>
                <td>${user.name}</td>
                <td>${user.email}</td>
                <td>${user.phoneNumber}</td>
            `;
            usersContainer.appendChild(userElement);
        });

        // usersContainer.style.display = 'none'

    } catch (error) {
        console.error('Error fetching data:', error);
    }
}

// Add event listeners to pagination links
document.querySelectorAll('.pagination .page-link').forEach(link => {
    link.addEventListener('click', async (event) => {
        event.preventDefault(); // Prevent the default link behavior

        const page = event.target.textContent.trim(); // Extract the page number from the link text
        await loadPage(page);
    });
});

  
</script>

