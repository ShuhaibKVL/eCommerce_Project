    <script>
    document.addEventListener('DOMContentLoaded', function() {
        function openEditCouponModal(couponId) {
            fetch(`http://localhost:5000/admin/getEditCouponDetails?id=${couponId}`)
            .then(response => {
                if(!response.ok){
                    throw new Error('Failed to fetch coupon details')
                }
                return response.json()
            })
            .then(data => {
                populateEditCouponForm(data)
                // document.getElementById('editCouponModal').style.display = 'block'
                console.log("ugsdfdsgfjhdgbfh");
                $('#editCouponModal').modal('show');
            })
            .catch(error => console.error('Error fetching coupon details:', error))
        }

        function populateEditCouponForm(couponDetails) {
            // Populate the form fields with the fetched coupon details
            document.getElementById('editcouponName').value = couponDetails.name;
            document.getElementById('editdiscountType').value = couponDetails.discountType;
            document.getElementById('editdiscount').value = couponDetails.discount;
            document.getElementById('editinstruction').value = couponDetails.instruction;
            document.getElementById('_id').value = couponDetails._id;
            document.getElementById('editCoupenCode').value = couponDetails.couponCode;
            document.getElementById('editExpireDate').value = couponDetails.expireDate;
            console.log(couponDetails.expireDate);
            

            console.log("couponDetails reached on client side populateEditCouponForm FUNCTION : ",couponDetails);
            
        }
        document.querySelectorAll('.edit-coupon-button').forEach(button => {
            button.addEventListener('click', function(event) {
                event.preventDefault()
                const couponId = this.getAttribute('data-coupon-id')
                openEditCouponModal(couponId)
            })
        })
    });
