            .then(Response => Response.json())
            .then(data => {
                console.log(data);

                $('#reloadDiv').load('/admin/loadCoupon #reloadDiv');

            })
            .catch(error => console.error("Error on fetch API of deleteCoupon :",error))
        }



    document.querySelectorAll('.dlete-coupon').forEach(button => {
