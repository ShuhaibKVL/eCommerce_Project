    <title>User Profile Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            /* display: flex; */
        }
        
        #sidebar {
            width: 250px;
            background: #ff0163;
            padding-top: 20px;
            position: fixed;
            height: 100%;
            overflow-y: auto;
            color: white;
        }

        #content {
            
            padding: 20px;
            width: 100%;
            /* border: 1px solid black; */
            display: flex;
            justify-content: center;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
    
        li {
            padding: 15px;
            border-bottom: 1px solid #555;
            cursor: pointer;
        }
    
        li:hover {
            background: #ffffff;
            color: #333;
            border-radius: 30px;
            box-shadow: 5px 5px 50px rgb(155, 4, 4);
            box-shadow:inset 3px 3px 10px rgba(66, 66, 66, 0.512);
        }
    
        h2 {
            color: #333;
        }
        .navigation_buttons{
            text-decoration: none;
            color: white;
            font-weight: bolder;
        }
        .profileImg{
            width: 100px; 
            height: 100px;
            border-radius: 50%;
            background-color: #3333337a;
            margin-bottom: 15px;
        }
        .sub{
            
            width: fit-content;
        }
        .Order{
            width: 200px;
            height: 100px;
            border-radius: 30px;
            background-color: rgb(135, 255, 255);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .Order.h2{
            color: white;
            font-weight: bolder;
        }
        .secound_content{
            /* border: 1px solid black; */
            display: flex;
            justify-content:space-evenly;
            height: fit-content;
        }
        .main{
            display: flex;
        }
        .content_main{
            margin-left: 250px;
            /* background-color: #ff0163; */
            width: 90%;
            height: fit-content;
        }
    </style>
</head>
<body>
<div class="main">
    <div id="sidebar">
        <ul>
            <a href="/Address" class="navigation_buttons"><li>Address</li></a>
            <a href="/Cart" class="navigation_buttons"><li>Cart</li></a>
            <a href="" class="navigation_buttons"><li>Orders</li></a>
            <a href="" class="navigation_buttons"><li>Forgot Password</li></a>
            
            
            
            <!-- <li onclick="loadContent('user-details')">User Details</li>
            <li onclick="loadContent('addresses')">Addresses</li>
            <li onclick="loadContent('orders')">Orders</li>
            <li onclick="loadContent('add-address')">Add Address</li>
            <li onclick="loadContent('edit-profile')">Edit Profile</li>
            <li onclick="loadContent('cancel-orders')">Cancel Orders</li>
            <li onclick="loadContent('forgot-password')">Forgot Password</li>
            <li onclick="loadContent('cart-management')">Cart Management</li> -->
        </ul>
    </div>

    <div class="content_main">
        <div id="content">
            <div class="sub">
                <div class="profileImg" ></div>
                <h3><%= User.name %></h3>
                <p><%= User.email %></p>
                <p><%= User.phoneNumber %></p>
            </div>
        </div>


        <div class="secound_content">
            <div class="Order"><h2>Orders</h2></div>
            <div class="Order"><h2>Cart</h2></div>
        </div>
    </div>
</div>
