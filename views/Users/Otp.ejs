<script>
    var seconds = 240; // Set the initial time in seconds (4 minutes)
    var countdownTimeout; // Variable to store the timeout ID

function countdown() {
    var countdownElement = document.getElementById("countdown");

    if (seconds > 0) {
        var minutes = Math.floor(seconds / 60);
        var remainingSeconds = seconds % 60;

        countdownElement.textContent = minutes + "m " + remainingSeconds + "s";
        seconds--;

        // Schedule the next update or reset
        countdownTimeout = setTimeout(countdown, 1000);
    } else {
        countdownElement.textContent = "Time's up!";
        // Handle OTP timeout action here
    }
}

// Call the countdown function to start the timer
countdown();

// Function to stop the countdown
function stopCountdown() {
    clearTimeout(countdownTimeout);
    seconds = 240
    countdown()
}

// Example: Assuming you have a button with id "stopButton"
document.getElementById("stopButton").addEventListener("click", stopCountdown);

</script>

