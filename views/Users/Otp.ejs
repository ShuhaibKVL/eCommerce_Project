                return false
                }
            
              //  << email validation >>
            const emailRegex = /^[a-zA-Z0-9._%+-]+@gmail\.[a-zA-Z]{2,4}$/;
            if (!emailRegex.test(email)){
                document.getElementById('error-message').innerHTML ="Please Enter a Valid Gmail Address"
                return false
            }

              //   << number validation  >>
            if(!/^\d+$/.test(phoneNumber)){
                document.getElementById('error-message').innerHTML ="Mobile should contain only numbers"
                return false
            }

              //  << Password Validation  >>
            if(password.includes(' ')){
                document.getElementById('error-message').innerHTML ="Please Enter a Valid Gmail Address"
                return false
            }
            
            return true
        }
    </script>

