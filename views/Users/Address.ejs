    <title>User Profile Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            /* display: flex; */
        }
        
        #sidebar {
            width: 250px;
            background: #ff0163;
            padding-top: 20px;
            position: fixed;
            height: 100%;
            overflow-y: auto;
            color: white;
        }

        #content {
            
            padding: 40px;
            width: 100%;
            /* border: 1px solid black; */
            display: flex;
            justify-content:left
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
    
        li {
            padding: 15px;
            border-bottom: 1px solid #555;
            cursor: pointer;
        }
    
        li:hover {
            background: #ffffff;
            color: #333;
            border-radius: 30px;
            box-shadow: 5px 5px 50px rgb(155, 4, 4);
            box-shadow:inset 3px 3px 10px rgba(66, 66, 66, 0.512);
        }
    
        h2 {
            color: #333;
        }
        .navigation_buttons{
            text-decoration: none;
            color: white;
            font-weight: bolder;
        }
        .profileImg{
            width: 100px; 
            height: 100px;
            border-radius: 50%;
            background-color: #3333337a;
            margin-bottom: 15px;
        }
        .sub{
            display: flex;
            justify-content: center;
            align-items: center;
            border: 1px solid red;
            /* box-shadow: 3px 3px 10px red; */
            width: 350px;
            border-radius: 30px;
            /* text-align:left */
        }
        .Order{
            width: 200px;
            height: 100px;
            border-radius: 30px;
            background-color: rgb(135, 255, 255);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .Order.h2{
            color: white;
            font-weight: bolder;
        }
        .secound_content{
            /* border: 1px solid black; */
            display: flex;
            justify-content:space-evenly;
            height: fit-content;
        }
        .main{
            display: flex;
        }
        .content_main{
            margin-left: 250px;
            /* background-color: #ff0163; */
            width: 90%;
            height: fit-content;
        }
        .Address_span{
            color: #000000;
            font-weight: bolder;
        }
        .Edibuttton{
            padding: 10px 20px;
            border-radius: 15px;
            background-color: rgb(0, 183, 37);
            color: white;
            margin-bottom: 5px;
        }
        .addbuttton{
            padding: 10px 20px;
            border-radius: 15px;
            background-color: rgb(197, 0, 0);
            color: white;
            margin-left: 40px;
        }
    </style>
</head>
<body>
<div class="main">
    <div id="sidebar">
        <ul>
            <a href="" class="navigation_buttons"><li>Address</li></a>
            <a href="" class="navigation_buttons"><li>Cart</li></a>
            <a href="" class="navigation_buttons"><li>Orders</li></a>
            <a href="" class="navigation_buttons"><li>Forgot Password</li></a>
            
        </ul>
    </div>

    <div class="content_main">

        <div id="content">
            <% if(typeof Address !== 'Undefined') { %>

            <% Address.forEach(Address => { %>
            <div class="sub">
                <div class="min_sub">
                    <p> <span class="Address_span"> First Name :</span> <%= Address.FirstName %> </p>
                    <p> <span class="Address_span"> Last Name :</span> <%= Address.LastName %> </p>
                    <p> <span class="Address_span">Phone Number :</span> <%= Address.PhoneNumber %> </p>
                    <p> <span class="Address_span">Email :</span> <%= Address.Email %> </p>
                    <p> <span class="Address_span"> Country :</span> <%= Address.Country %> </p>
                    <p> <span class="Address_span"> State :</span> <%= Address.State %> </p>
                    <p> <span class="Address_span"> District :</span> <%= Address.District %> </p>
                    <p> <span class="Address_span"> Address :</span> <%= Address.add1 %> </p>
                    <p><%= Address.add2 %> </p>
                    <p> <span class="Address_span"> Town :</span> <%= Address.Town %> </p>
                    <p> <span class="Address_span"> Pin Code :</span> <%= Address.PinCode %> </p>
                    <br>
                    
                    <a href="/Edit_Address"><button class="Edibuttton">Edit Address</button></a>
                
                </div>
            </div>
            <% }) %>

            <% }else{ %>
                <h3>No Address Added</h3>
            <% } %>
        </div>


        <!-- <div class="secound_content">
            <div class="Order"><h2>Orders</h2></div>
            <div class="Order"><h2>Cart</h2></div>
        </div> -->
    <a href="/Add_Address"><button class="addbuttton">Add Addrss</button></a>


    </div>
